<script>
    $(".sortBtn  li").click(function(){
        var tg = $(this);
        var tc = tg[0].className;
        $(".sortBtn  li").removeClass("on");
        $(".cardWrap").removeClass("large quator list")
        tg.addClass("on")
        switch(tc){
            case "large":
                $(".cardWrap").addClass("large")
                break;
            case "quator":
                $(".cardWrap").addClass("quator")
                break;
            case "list":
                $(".cardWrap").addClass("list")
                break;
            default :
                return false;
                break;
        }
    })
</script>